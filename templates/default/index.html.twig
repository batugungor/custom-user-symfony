{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block stylesheets %}
    <style>
        #canvas-holder-0 {
            position: absolute;
            top: 700px;
            left: 200px;
        }

        #canvas-holder-1 {
            position: absolute;
            top: 700px;
            left: 700px;
        }

        .sketchpad {
            border: 1px solid #000;
        }
    </style>
{% endblock %}

{% block body %}
    {{ form_start(form, {'method': 'POST'}) }}
    <input type="hidden" name="apply_signature-0" id="apply_signature-0">
    <input type="hidden" name="apply_signature-1" id="apply_signature-1">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Voornaam</label>
            {{ form_widget(form.firstname, {'attr': {'class': 'form_control'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label>Achternaam</label>
            {{ form_widget(form.lastname, {'attr': {'class': 'form_control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Geslacht</label>
            {{ form_widget(form.gender, {'attr': {'class': 'form_control'}}) }}
        </div>

        <div class="form-group col-md-6">
            <label>Telefoon nummer</label>
            {{ form_widget(form.phone_number, {'attr': {'class': 'form_control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>GSM nummer</label>
            {{ form_widget(form.mobile_number, {'attr': {'class': 'form_control'}}) }}
        </div>

        <div class="form-group col-md-6">
            <label>Email</label>
            {{ form_widget(form.email, {'attr': {'class': 'form_control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Geboortedatum</label>
            {{ form_widget(form.date_of_birth, {'attr': {'class': 'form_control '}}) }}
        </div>

        <div class="form-group col-md-6">
            <label>Geboortedatum ouder/voogd</label>
            {{ form_widget(form.date_of_birth_parent, {'attr': {'class': 'form_control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Huisnummer</label>
            {{ form_widget(form.house_number, {'attr': {'class': 'form_control'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label>Woonplaats</label>
            {{ form_widget(form.residence, {'attr': {'class': 'form_control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Postcode</label>
            {{ form_widget(form.postal_code, {'attr': {'class': 'form_control'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label>Voornaam & achternaam ouder/voogd</label>
            {{ form_widget(form.first_lastname_parent, {'attr': {'class': 'form_control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Adres</label>
            {{ form_widget(form.address, {'attr': {'class': 'form_control'}}) }}
        </div>
        <div class="form-group col-md-6">
            <label>IBAN</label>
            {{ form_widget(form.iban, {'attr': {'class': 'form_control'}}) }}
        </div>
    </div>
    <button type="submit">Verzenden</button>
    {{ form_end(form) }}

    <div id="canvas-holder-0">
        <canvas class="sketchpad" id="sketchpad-0" width="400" height="400">Sorry, your browser is not supported.
        </canvas>
        <p>Handtekening leerling</p>
        <button id="clear-0">clear</button>
    </div>
    <div id="canvas-holder-1">
        <canvas class="sketchpad" id="sketchpad-1" width="400" height="400">Sorry, your browser is not supported.
        </canvas>
        <p>Handtekening Ouder / Voogd</p>
        <button id="clear-1">clear</button>
    </div>

    <div id="container">
    </div>

{% endblock %}

{% block javascripts %}

    <script src="/js/draw.js"></script>
    <script src="/js/draw-2.js"></script>
    <script>
        document.getElementById('sketchpad-0').addEventListener("touchstart", function (event) {
            event.preventDefault()
        });
        document.getElementById('sketchpad-0').addEventListener("touchmove", function (event) {
            event.preventDefault()
        });
        document.getElementById('sketchpad-0').addEventListener("touchend", function (event) {
            event.preventDefault()
        });
        document.getElementById('sketchpad-0').addEventListener("touchcancel", function (event) {
            event.preventDefault()
        });

        document.getElementById('sketchpad-1').addEventListener("touchstart", function (event) {
            event.preventDefault()
        });
        document.getElementById('sketchpad-1').addEventListener("touchmove", function (event) {
            event.preventDefault()
        });
        document.getElementById('sketchpad-1').addEventListener("touchend", function (event) {
            event.preventDefault()
        });
        document.getElementById('sketchpad-1').addEventListener("touchcancel", function (event) {
            event.preventDefault()
        });
    </script>

{% endblock %}
